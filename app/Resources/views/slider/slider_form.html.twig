{% extends 'base_admin.html.twig' %}
{% block body %}

    {% include '::admin_blocks/header.html.twig' with { 'h2Title': h2Title, 'addPath': path('slider_new')  } %}

    <div class="container pl-4 pt-4 pb-5">
        {{ form_start(form) }}
        <div class="row media-row">
            <div class="col-12">
                {{ form_row(form.titulo) }}
            </div>
            <div class="col-12">
                {{ form_row(form.contenido) }}
            </div>
            <div class="col-6">
                {{ form_row(form.tipo) }}
            </div>
            <div class="col-6">
                {{ form_row(form.url) }}
            </div>
            <div class="col-4">
                {{ form_row(form.textAlign) }}
            </div>
            <div class="col-4">
                {{ form_row(form.textColor) }}
            </div>
            <div class="col-4">
                {{ form_row(form.overlay) }}
            </div>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Nuevo" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
