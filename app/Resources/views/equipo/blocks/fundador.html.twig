<div class="mbr-testimonial p-3 align-center col-12 col-md-6 col-lg-4">
    <div class="panel-item p-3">
        <div class="card-block">
            <div class="testimonial-photo">
                <img src="{{ asset(equipo_img_route ~ fundador.img) }}">
            </div>
            <p class="mbr-text mbr-fonts-style display-7">
                {{ fundador.descripcion }}
            </p>
        </div>
        <div class="card-footer">
            <div class="mbr-author-name mbr-bold mbr-fonts-style display-7">
                {{ fundador.nombre }} {{ fundador.apellidos }}
            </div>
            <small class="mbr-author-desc mbr-italic mbr-light mbr-fonts-style display-7">
                <p>
                    {% include 'equipo/blocks/tags.html.twig' with {'tags': fundador.tags} %}
                </p>
            </small>
            <div class="pt-2">
                {% include 'equipo/blocks/social.html.twig' with {'equipo': fundador} %}
            </div>
        </div>
    </div>
</div>