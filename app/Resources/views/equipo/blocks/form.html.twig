{% extends 'base_admin.html.twig' %}
{% block body %}

    {% include 'blocks/admin/header.html.twig' with { 'h2Title': h2Title, 'addPath': path('equipo_new')  } %}

    <div class="container pl-4 pt-4 pb-5">
        {{ form_start(form) }}
        <div class="row media-row">
            <div class="col-4">
                {{ form_row(form.nombre) }}
            </div>
            <div class="col-4">
                {{ form_row(form.apellidos) }}
            </div>
            <div class="col-4">
                {{ form_row(form.email) }}
            </div>
            <div class="col-3">
                {{ form_row(form.facebook) }}
            </div>
            <div class="col-3">
                {{ form_row(form.instagram) }}
            </div>
            <div class="col-3">
                {{ form_row(form.twitter) }}
            </div>
            <div class="col-3">
                {{ form_row(form.youtube) }}
            </div>
            <div class="col-12">
                {{ form_row(form.descripcion) }}
            </div>
        </div>
        {{ form_widget(form) }}
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Enviar" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
