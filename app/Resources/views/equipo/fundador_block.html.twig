<div class="mbr-testimonial p-3 align-center col-12 col-md-6 col-lg-4">
    <div class="panel-item p-3">
        <div class="card-block">
            <div class="testimonial-photo">
                <img src="{{ asset(equipo_img_route ~ fundador.img) }}">
            </div>
            <p class="mbr-text mbr-fonts-style display-7">
                {{ fundador.descripcion }}
            </p>
        </div>
        <div class="card-footer">
            <div class="mbr-author-name mbr-bold mbr-fonts-style display-7">
                {{ fundador.nombre }} {{ fundador.apellidos }}
            </div>
            <small class="mbr-author-desc mbr-italic mbr-light mbr-fonts-style display-7">
                Developer
            </small>
            <div class="pt-2">
                {% if fundador.twitter %}
                    <a href="https://twitter.com/{{ fundador.twitter }}" target="_blank">
                        <span class="p-1 socicon-twitter socicon mbr-iconfont mbr-iconfont-social"></span>
                    </a>
                {% endif %}
                {% if fundador.facebook %}
                    <a href="https://www.facebook.com/{{ fundador.facebook }}" target="_blank">
                        <span class="p-1 socicon-facebook socicon mbr-iconfont mbr-iconfont-social"></span>
                    </a>
                {% endif %}
                {% if fundador.instagram %}
                    <a href="https://www.instagram.com/{{ fundador.instagram }}/" target="_blank">
                        <span class="p-1 socicon-instagram socicon mbr-iconfont mbr-iconfont-social"></span>
                    </a>
                {% endif %}
                {% if fundador.youtube %}
                    <a href="https://www.youtube.com/channel/{{ fundador.youtube }}" target="_blank">
                        <span class="p-1 socicon-youtube socicon mbr-iconfont mbr-iconfont-social"></span>
                    </a>
                {% endif %} 
            </div>
        </div>
    </div>
</div>