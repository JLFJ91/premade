{% extends 'base_admin.html.twig' %}
{% block body %}
    <h1>Equipos list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Img</th>
            <th>Email</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Twitter</th>
            <th>Youtube</th>
            <th>Tipo</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for equipo in equipos %}
            <tr>
                <td><a href="{{ path('equipo_show', { 'id': equipo.id }) }}">{{ equipo.id }}</a></td>
                <td>{{ equipo.nombre }}</td>
                <td>{{ equipo.apellidos }}</td>
                <td>{{ equipo.img }}</td>
                <td>{{ equipo.email }}</td>
                <td>{{ equipo.facebook }}</td>
                <td>{{ equipo.instagram }}</td>
                <td>{{ equipo.twitter }}</td>
                <td>{{ equipo.youtube }}</td>
                <td>{{ equipo.tipo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipo_show', { 'id': equipo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('equipo_edit', { 'id': equipo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipo_new') }}">Create a new equipo</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/dropdown/js/script.min.js') }}"></script>
{% endblock %}