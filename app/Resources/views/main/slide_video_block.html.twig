<div class="carousel-item slider-fullscreen-image {% if id == 0 %} active {% endif %}" data-bg-video-slide="https://www.youtube.com/watch?v={{ slide.url }}">
    {% if slide.overlay %}
        <div class="mbr-overlay"></div>
    {% endif %}
    <div class="container container-slide">
        <div class="image_wrapper"><img src="{{ asset('assets/images/2.jpg') }}" style="opacity: 0;">
            <div class="carousel-caption justify-content-center">
                <div class="col-10 text-{{ slide.textAlign }}">
                    <h2 class="mbr-fonts-style display-1" {% if slide.textColor %} style="color: {{ slide.textColor }} " {% endif %}>{{ slide.titulo }}</h2>
                    <p class="lead mbr-text mbr-fonts-style display-5" {% if slide.textColor %} style="color: {{ slide.textColor }} " {% endif %}>{{ slide.contenido }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

