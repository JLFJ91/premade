<div class="carousel-item slider-fullscreen-image {% if id == 0 %} active {% endif %}" data-bg-video-slide="https://www.youtube.com/watch?v={{ slide.url }}">
    <div class="mbr-overlay"></div>
    <div class="container container-slide">
        <div class="image_wrapper">
            <img src="{{ asset('assets/images/2.jpg') }}" style="opacity: 0;">
            <div class="carousel-caption justify-content-center">
                <div class="col-10 align-left">
                    <h2 class="mbr-fonts-style display-1">{{ slide.titulo }}</h2>
                    <p class="lead mbr-text mbr-fonts-style display-5">
                        {{ slide.contenido }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

