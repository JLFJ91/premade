{% extends 'base.html.twig' %}

{% block body %}
    <h1>Proyecto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ proyecto.nombre }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ proyecto.img }}</td>
            </tr>
            <tr>
                <th>Iframe</th>
                <td>{{ proyecto.iframe }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if proyecto.createdAt %}{{ proyecto.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('proyectos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('proyectos_edit', { 'id': proyecto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
