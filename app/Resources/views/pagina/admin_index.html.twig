{% extends 'base_admin.html.twig' %}

{% block title %}PÁGINAS - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/datatables/data-tables.bootstrap4.min.css') }}">
{% endblock %}

{% block body %}

    {% include 'blocks/admin/header.html.twig' with {
        'title': 'Páginas',
        'addPath': path('paginas_new')
        }
    %}

    <section class="section-table cid-qN6ZXrad2L" id="table1-1">
        <div class="container container-table">
            <div class="table-wrapper">
                <div class="container scroll">
                    <table class="table" cellspacing="0">
                        <thead>
                        <tr class="table-heads ">
                            <th class="head-item mbr-fonts-style display-7">
                                Titulo
                            </th>
                            <th class="head-item mbr-fonts-style display-7">
                                Fecha Creación
                            </th>
                            <th class="head-item mbr-fonts-style display-7">
                                Acciones
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pagina in paginas %}
                            <tr>
                                <td class="body-item mbr-fonts-style display-7">
                                    {{ pagina.titulo }}
                                </td>
                                <td class="body-item mbr-fonts-style display-7">
                                    {% if pagina.createdAt %}{{ pagina.createdAt|date('Y-m-d H:i:s') }}{% endif %}
                                </td>
                                <td class="body-item mbr-fonts-style display-7">
                                    <a href="{{ path('paginas_edit', { 'id': pagina.id }) }}" title="Editar">
                                        <span class="mbri-edit2 mbr-iconfont mbr-iconfont-btn"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/dropdown/js/script.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/jquery.data-tables.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/data-tables.bootstrap4.min.js') }}"></script>
{% endblock %}
